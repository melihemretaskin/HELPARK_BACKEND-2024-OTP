@{
    ViewData["Title"] = "OTP";
}

<h2>OTP Verification</h2>

<form asp-controller="OTPVerification" asp-action="VerifyOtpAsync" method="post">
    <div class="form-group">
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" required>
    </div>
    <div class="form-group">
        <label for="otp">Enter OTP:</label>
        <input type="text" class="form-control" id="otp" name="otp" maxlength="6" required>
        <small id="otpHelp" class="form-text text-muted">Please enter the 6-digit OTP sent to your device.</small>
    </div>
    <button type="submit" class="btn btn-primary">Verify</button>
</form>
